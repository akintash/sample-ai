datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String?
  description String?
  boards      Board[]
  tasks       Task[]
}

model Task {
  id          String            @id @default(cuid())
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  description String?
  status      EnumTaskStatus?
  dueDate     DateTime?
  title       String?
  priority    EnumTaskPriority?
  assignee    String?
  board       Board?            @relation(fields: [boardId], references: [id])
  boardId     String?
  project     Project?          @relation(fields: [projectId], references: [id])
  projectId   String?
}

model Board {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String?
  description String?
  project     Project? @relation(fields: [projectId], references: [id])
  projectId   String?
  tasks       Task[]
}

model Integration {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  settings  Json?
  typeField String?
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String?
  lastName  String?
  username  String   @unique
  email     String?  @unique
  password  String
  roles     Json
}

enum EnumTaskStatus {
  Option1
}

enum EnumTaskPriority {
  Option1
}
